<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuantoDemoraApp.Views.Hospitais.ListagemView"
             Title="ListagemView">

     <VerticalStackLayout Padding="10, 0, 0, 0" 
                          VerticalOptions="FillAndExpand">
        <ListView x:Name="listView"
                  HasUnevenRows="True" 
                  ItemsSource="{Binding Hospitais}" 
                  SelectedItem="{Binding HospitalSelecionado}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding NomeFantasia}"
                                   FontSize="18" 
                                   FontAttributes="Bold"/>
                            <Label
                                Text="{Binding Cnpj}" 
                                FontSize="18" 
                                FontAttributes="Bold"/>
                            <Label
                                Text="{Binding Endereco}" 
                                FontSize="18" 
                                FontAttributes="Bold"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
    
</ContentPage>
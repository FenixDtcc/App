<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuantoDemoraApp.Views.Hospitais.InformacoesHospitalView"
             Shell.PresentationMode="Animated"
             Title="InformacoesHospitalView">

    <Grid>
        <ScrollView x:Name="scrollView"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand">
            <Frame CornerRadius="0" 
                   BorderColor="Transparent">
                <Frame.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="{x:StaticResource Secondary}" />
                        <GradientStop Color="#fff" />
                    </LinearGradientBrush>
                </Frame.Background>


                <Grid Padding="0" 
                      RowSpacing="10" 
                      ColumnSpacing="10">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>


                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>


                    <VerticalStackLayout>

                        <VerticalStackLayout Grid.Row="0">
                            <VerticalStackLayout>
                                <Label Text="{Binding NomeFantasia}" FontSize="22" FontAttributes="Bold"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout>
                                <Label FontSize="18" >
                                    <MultiBinding StringFormat="{}{0} {1}, {2}, {3}, {4}, {5} - {6}">
                                        <Binding Path="DsLogradouro" />
                                        <Binding Path="Endereco" />
                                        <Binding Path="Numero" />
                                        <Binding Path="Cep" />
                                        <Binding Path="Bairro" />
                                        <Binding Path="Cidade" />
                                        <Binding Path="Uf" />
                                    </MultiBinding>
                                </Label>
                            </VerticalStackLayout>
                        </VerticalStackLayout>


                        <VerticalStackLayout Grid.Row="1">
                            <ListView x:Name="listView"
                                  HasUnevenRows="True" 
                                  ItemsSource="{Binding Especialidades}"
                                  SelectionMode="None"
                                  VerticalScrollBarVisibility="Never">

                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <ViewCell>
                                            <VerticalStackLayout Padding="10">

                                                <Frame BackgroundColor="{StaticResource Secondary}"
                                                   BorderColor="{StaticResource Primary}"
                                                   CornerRadius="20"
                                                   Padding="0,30,0,30">

                                                    <HorizontalStackLayout VerticalOptions="CenterAndExpand"
                                                                       HorizontalOptions="CenterAndExpand">
                                                        <HorizontalStackLayout>
                                                            <Image Source="medico.svg"/>
                                                        </HorizontalStackLayout>

                                                        <VerticalStackLayout>
                                                            <Label Text="{Binding DsEspecialidade}"
                                                               FontSize="18" 
                                                               FontAttributes="Bold"
                                                               HorizontalTextAlignment="Center"/>
                                                            <Label Text="Tempo MÃ©dio de Atendimento:"
                                                               FontSize="16"
                                                               HorizontalTextAlignment="Center"/>
                                                            <Label Text="{Binding TempoMedioConvertido}"
                                                               FontSize="22" 
                                                               FontAttributes="Bold"
                                                               HorizontalTextAlignment="Center"/>
                                                        </VerticalStackLayout>

                                                    </HorizontalStackLayout>
                                                </Frame>

                                            </VerticalStackLayout>
                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </VerticalStackLayout>

                        <Frame Grid.Row="2"
                               BackgroundColor="#a9e0e9"
                               BorderColor="{StaticResource Primary}"
                               Padding="0"
                               CornerRadius="100"
                               WidthRequest="200"
                               HeightRequest="50">
                            <ImageButton Source="buttongoogle.svg"
                                         Command="{Binding AbrirMapaCommand}"
                                         HeightRequest="150"
                                         WidthRequest="250"/>
                        </Frame>

                    </VerticalStackLayout>
                </Grid>
            </Frame>
        </ScrollView>
    </Grid>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuantoDemoraApp.Views.Hospitais.InformacoesHospitalView"
             Shell.PresentationMode="Animated"
             Title="InformacoesHospitalView">
    <ScrollView>
        <VerticalStackLayout Spacing="3" 
                             Padding="15">
            <Label Text="Razão Social" 
                   FontSize="Medium" />
                <Entry Text="{Binding RazaoSocial}" 
                       FontSize="Medium" />
            <Label Text="Cnpj" 
                   FontSize="Medium" />
                <Entry Text="{Binding Cnpj}" 
                       FontSize="Medium" />
            <Label Text="Endereço" 
                   FontSize="Medium" />
                <Entry Text="{Binding Endereco}" 
                       FontSize="Medium" />
            <Label Text="Numero" 
                   FontSize="Medium" />
                <Entry Text="{Binding Numero}" 
                       FontSize="Medium" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
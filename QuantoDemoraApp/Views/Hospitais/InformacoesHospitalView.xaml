<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuantoDemoraApp.Views.Hospitais.InformacoesHospitalView"
             Shell.PresentationMode="Animated"
             Title="InformacoesHospitalView">
    <ScrollView>
        <VerticalStackLayout Spacing="3" Padding="15">
            
            <Entry Text="{Binding RazaoSocial}" FontSize="Medium" IsEnabled="False" />

            <Label FontSize="Medium">
                <Label.Text>
                        <MultiBinding StringFormat="{}{0} {1}, {2}, {3}, {4}, {5} - {6}">
                        <Binding Path="DsLogradouro" />
                        <Binding Path="Endereco" />
                            <Binding Path="Numero" />
                            <Binding Path="Cep" />
                            <Binding Path="Bairro" />
                            <Binding Path="Cidade" />
                            <Binding Path="Uf" />
                        </MultiBinding>
                </Label.Text>
            </Label>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
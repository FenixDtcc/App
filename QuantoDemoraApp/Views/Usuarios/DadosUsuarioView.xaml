<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuantoDemoraApp.Views.Usuarios.DadosUsuarioView"
             Title="DadosUsuarioView">

    <ScrollView>
        <VerticalStackLayout Spacing="3" Padding="15">
            <Label Text="Id de Usuário" FontSize="Medium" />
            <Entry Text="{Binding Id}" IsEnabled="False" FontSize="Medium" />
            <!--<Label Text="Matrícula Associado (Plano de Saúde)" FontSize="Medium" />
            <Entry Text="{Binding IdAssociado}" IsEnabled="False" FontSize="Medium" />-->
            <Label Text="CPF" FontSize="Medium" />
            <Entry Text="{Binding Cpf}" IsEnabled="False" FontSize="Medium" />
            <Label Text="Nome" FontSize="Medium" />
            <Entry Text="{Binding Nome}" IsEnabled="False" FontSize="Medium" />
            <Label Text="Email" FontSize="Medium" />
            <Entry Text="{Binding Email}" IsEnabled="False" FontSize="Medium" Keyboard="Email" />
            <HorizontalStackLayout Spacing="10">
                <Button Text="Alterar Dados" Command="{Binding AbrirAlteracaoDadosUsuarioCommand}"></Button>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
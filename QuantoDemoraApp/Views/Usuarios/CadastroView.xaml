<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuantoDemoraApp.Views.CadastroView"
             Title="CadastroView">
    
    <VerticalStackLayout>
        <Entry Placeholder="Digite seu nome de usuÃ¡rio" 
               Text ="{Binding Login}"
               Margin="0,10,0,0" 
               VerticalOptions="FillAndExpand"
               HorizontalOptions="FillAndExpand">
        </Entry>
        
        <Entry Placeholder="Digite a senha" 
               Text="{Binding Senha}" 
               IsPassword="True"
               Margin="0,10,0,0" 
               VerticalOptions="FillAndExpand"
               HorizontalOptions="FillAndExpand" >
        </Entry>

        <Entry Keyboard="Email" 
               Placeholder="Digite a E-mail" 
               Text="{Binding Email}"
               Margin="0,10,0,0" 
               VerticalOptions="FillAndExpand"
               HorizontalOptions="FillAndExpand" >
        </Entry>

        <Entry Placeholder="Digite a CPF" 
               Text="{Binding Cpf}" 
               Margin="0,10,0,0" 
               VerticalOptions="FillAndExpand"
               HorizontalOptions="FillAndExpand" >
        </Entry>

        <Button Text="Registrar" 
                Command="{Binding CadastrarCommand}" 
                Margin="0,10,0,0"/>
    </VerticalStackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuantoDemoraApp.Views.CadastroView"
             Title="CadastroView">

    <Grid>
        <ScrollView x:Name="scrollView"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand">
            <Frame CornerRadius="0" 
               BorderColor="Transparent"
               MaximumHeightRequest="100"
               MaximumWidthRequest="100">
                <Frame.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#fff" />
                        <GradientStop Color="{x:StaticResource Secondary}" />
                    </LinearGradientBrush>
                </Frame.Background>

                <Grid Grid.Row="1"
                  Padding="0" 
                  RowSpacing="10" 
                  ColumnSpacing="10" 
                  HorizontalOptions="CenterAndExpand" 
                  VerticalOptions="CenterAndExpand">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackLayout Grid.Row="0"
                             VerticalOptions="CenterAndExpand">
                        <Image Source="logo.svg"
                           MaximumHeightRequest="100"
                           MaximumWidthRequest="100" />
                    </StackLayout>
                    
                    <Frame BackgroundColor="{x:StaticResource Secondary}"
                        BorderColor="{x:StaticResource Primary}"
                        Padding="10"
                        Grid.Row="1"
                        CornerRadius="100">
                        <HorizontalStackLayout>
                            <HorizontalStackLayout Grid.Column="0" >
                                <Image Source="usuario.svg" 
                                           HeightRequest="20"
                                           WidthRequest="20"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Grid.Column="1" >
                                <Entry Placeholder="Digite seu nome de usuÃ¡rio"
                                    PlaceholderColor="{x:StaticResource Primary}"
                                    Text="{Binding Login}"
                                    HorizontalTextAlignment="Center"
                                    FontSize="16"
                                    CharacterSpacing="2"
                                    TextColor="#000"
                                    FontAttributes="Bold"
                                    WidthRequest="280">
                                </Entry>
                            </HorizontalStackLayout>
                        </HorizontalStackLayout>
                    </Frame>

                    <Frame BackgroundColor="{x:StaticResource Secondary}"
                        BorderColor="{x:StaticResource Primary}"
                        Padding="10"
                        Grid.Row="2"
                        CornerRadius="100">
                        <HorizontalStackLayout>
                            <HorizontalStackLayout Grid.Column="0" >
                                <Image Source="doc.svg"
                                        HeightRequest="20"
                                        WidthRequest="20"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Grid.Row="1" 
                                               Grid.Column="0">
                                <Entry Placeholder="Digite o seu CPF" 
                                        PlaceholderColor="{x:StaticResource Primary}"
                                        Text="{Binding Cpf}"
                                        TextColor="#000"
                                        HorizontalTextAlignment="Center"
                                        FontSize="16"
                                        CharacterSpacing="2"
                                        FontAttributes="Bold" 
                                        WidthRequest="260">
                                </Entry>
                            </HorizontalStackLayout>
                        </HorizontalStackLayout>
                    </Frame>

                    <Frame BackgroundColor="{x:StaticResource Secondary}"
                        BorderColor="{x:StaticResource Primary}"
                        Padding="10"
                        Grid.Row="3"
                        CornerRadius="100">
                        <HorizontalStackLayout>
                            <HorizontalStackLayout Grid.Column="0" >
                                <Image Source="email.svg"
                                       HeightRequest="20"
                                       WidthRequest="20"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Grid.Row="1" 
                                               Grid.Column="0">
                                <Entry Keyboard="Email" 
                                       Placeholder="Digite o seu E-mail" 
                                       PlaceholderColor="{x:StaticResource Primary}"
                                       Text="{Binding Email}"
                                       TextColor="#000"
                                       HorizontalTextAlignment="Center"
                                       FontSize="16"
                                       CharacterSpacing="2"
                                       FontAttributes="Bold"
                                       WidthRequest="260">
                                </Entry>
                            </HorizontalStackLayout>
                        </HorizontalStackLayout>
                    </Frame>

                    <Frame BackgroundColor="{x:StaticResource Secondary}"
                            BorderColor="{x:StaticResource Primary}"
                            Padding="10"
                            Grid.Row="4"
                            CornerRadius="100">
                        <HorizontalStackLayout>
                            <HorizontalStackLayout Grid.Column="0" >
                                <Image Source="senha.svg"
                                        HeightRequest="20"
                                        WidthRequest="20"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Grid.Row="1"
                                                   Grid.Column="0">
                                <Entry Placeholder="Digite a sua senha"
                                    PlaceholderColor="{x:StaticResource Primary}"
                                    Text="{Binding Senha}"
                                    IsPassword="True"
                                    HorizontalTextAlignment="Center"
                                    FontSize="16"
                                    CharacterSpacing="2"
                                    TextColor="#000"
                                    FontAttributes="Bold" 
                                    WidthRequest="280">
                                </Entry>
                            </HorizontalStackLayout>
                        </HorizontalStackLayout>
                    </Frame>

                    <Frame Grid.Row="5"
                           Padding="0"
                           BorderColor="Transparent"
                           BackgroundColor="Transparent"
                           CornerRadius="100">

                        <Button Text="Registrar" 
                                Command="{Binding CadastrarCommand}" 
                                TextColor="{x:StaticResource Secondary}"
                                BackgroundColor="{x:StaticResource Primary}"
                                CornerRadius="100"
                                FontSize="16"
                                FontAttributes="Bold"/>
                    </Frame>
                </Grid>
            </Frame>
        </ScrollView>
    </Grid>
</ContentPage>